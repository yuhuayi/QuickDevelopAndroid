<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >
    
    <RelativeLayout 
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"        
        >
        <ImageView 
             android:id="@+id/partner_photo"
             android:layout_width="@dimen/dp_68"
    		 android:layout_height="@dimen/dp_68"
    		 android:background="@android:drawable/ic_lock_lock" 
    		 android:layout_centerVertical="true" 
    		 android:layout_marginTop="@dimen/dp_14" 
    		 android:layout_marginLeft="@dimen/dp_12"  
            /> 
            
        <LinearLayout             
            android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:orientation="vertical" 
    		android:layout_toRightOf="@id/partner_photo"             
            >
	        <TextView 
	             android:id="@+id/partner_name"
	             android:layout_width="wrap_content"
	    		 android:layout_height="wrap_content"
	    		 android:text="苏橙橙"
	    		 android:textSize="@dimen/sp_16"
	    		 android:layout_marginTop="@dimen/dp_12"   		 
	            />  
	        <TextView 
	            android:id="@+id/partner_position"
	            android:layout_width="wrap_content"
	    		android:layout_height="wrap_content"
	    		android:layout_marginTop="@dimen/dp_2"
	    		android:textSize="@dimen/sp_14"
	    		android:text="正邦设计总监"  
	    		android:textColor="@color/gray" 		
	            /> 
	        <TextView 
	            android:id="@+id/partner_sum"
	            android:layout_width="wrap_content"
	    		android:layout_height="wrap_content"
	    		android:text="合作两次"
	    		android:textSize="@dimen/sp_10"
	    		android:layout_marginTop="@dimen/dp_6"    		
	            />  
            </LinearLayout>  
            
       	<LinearLayout        	    
       	    android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:layout_alignParentRight="true"
	    	android:orientation="vertical"
	    	android:layout_centerVertical="true"
	    	android:layout_marginRight="@dimen/dp_6"
       	    >
	        <LinearLayout 
	            	android:layout_width="wrap_content"
		    		android:layout_height="wrap_content"
		    		android:orientation="vertical"
		    		android:layout_marginRight="@dimen/dp_10"
	            >
	       	    <ImageView 
	       	        android:id="@+id/partner_guanzhu_pictuew"
	       	        android:layout_width="@dimen/dp_24"
		    		android:layout_height="@dimen/dp_24"
		    		android:src="@android:drawable/btn_star"
		    		android:layout_gravity="center_horizontal"
	       	        />
	       	    <TextView 
	       	        android:id="@+id/partner_jiaguanzhu"
	       	        android:layout_width="wrap_content"
		    		android:layout_height="wrap_content"
		    		android:text="加关注"
		    		android:textSize="@dimen/sp_10"
		    		android:textColor="@color/gray"
	       	        />
	       	 </LinearLayout>   
       	</LinearLayout>
    </RelativeLayout>
    
    <ImageView 
   	     android:layout_width="match_parent"
   	     android:layout_height="@dimen/dp_0_5"
   	     android:background="@android:color/darker_gray"
   	     android:layout_marginLeft="@dimen/dp_12" 
   	 />
    
    <LinearLayout 
         android:layout_width="match_parent"
	     android:layout_height="wrap_content"
        >
        <TextView 
             android:id="@+id/partner_zuopin_name"
             android:layout_width="wrap_content"
	     	 android:layout_height="wrap_content"
	     	 android:text="角质设计出版工作室物料海报"
	     	 android:layout_marginLeft="@dimen/dp_12"
            />        
    </LinearLayout>
    
    <ImageView 
   	     android:layout_width="match_parent"
   	     android:layout_height="@dimen/dp_2"
   	     android:background="@color/background_gray"
   	 />
</LinearLayout>
