<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:background="@color/teme_title_color"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
            android:layout_width="match_parent"
            android:background="@color/teme_title_color"
            android:layout_height="@dimen/dp_48">
        <ImageView
                style="@style/title_left_bt_style"
                android:id="@+id/title_back_img"/>
        <TextView android:layout_centerInParent="true"
                  android:layout_width="wrap_content"
                  android:textSize="@dimen/sp_18"
                  android:textStyle="bold"
                  android:textColor="@color/black"
                  android:layout_height="wrap_content" android:text="设置" android:id="@+id/textView"/>
    </RelativeLayout>

    <RelativeLayout
            android:id="@+id/update_pwd_rl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:background="@color/white"
            >
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_18"
                android:text="修改密码"
                android:textColor="@color/black"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_14"
                />
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_14"
                android:background="@drawable/expand_close"
                />

        <View
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_0_0_5"
                android:layout_alignParentBottom="true"
                android:background="@color/background_gray"
                android:layout_marginLeft="@dimen/dp_14"
                />
    </RelativeLayout>

    <RelativeLayout
            android:id="@+id/black_list_rl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:background="@color/white"
            >
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_18"
                android:text="我的黑名单"
                android:textColor="@color/black"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_14"
                />
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_14"
                android:background="@drawable/expand_close"
                />
        <View
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_0_0_5"
                android:layout_alignParentBottom="true"
                android:background="@color/background_gray"
                android:layout_marginLeft="@dimen/dp_14"
                />
    </RelativeLayout>

    <RelativeLayout
            android:id="@+id/clear_chat_rl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:background="@color/white"
            >
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_18"
                android:text="清除聊天记录"
                android:textColor="@color/black"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_14"
                />
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_14"
                android:background="@drawable/expand_close"
                />
        <View
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_0_0_5"
                android:layout_alignParentBottom="true"
                android:background="@color/background_gray"
                android:layout_marginLeft="@dimen/dp_14"
                />
    </RelativeLayout>

    <RelativeLayout
            android:id="@+id/clear_cache_rl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:background="@color/white"
            >
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_18"
                android:text="清理缓存"
                android:textColor="@color/black"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_14"
                />
        <ImageView
                android:id="@+id/iv_back8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_14"
                android:background="@drawable/expand_close"
                />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_12"
                android:text=""
                android:id="@+id/cache_size_tv"
                android:textColor="@color/gray"
                android:layout_toLeftOf="@id/iv_back8"
                android:layout_centerVertical="true"
                />

    </RelativeLayout>
    <View
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_4"
            android:background="@color/teme_title_color"
            />
    <RelativeLayout
            android:id="@+id/suggest_submit_rl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:background="@color/white"
            >
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_18"
                android:text="意见反馈"
                android:textColor="@color/black"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_14"
                />
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_14"
                android:background="@drawable/expand_close"
                />
        <View
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_0_0_5"
                android:layout_alignParentBottom="true"
                android:background="@color/background_gray"
                android:layout_marginLeft="@dimen/dp_14"
                />
    </RelativeLayout>

    <RelativeLayout
            android:id="@+id/about_teme_rl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:background="@color/white"
            >
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_18"
                android:text="关于特内个"
                android:textColor="@color/black"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_14"
                />
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_14"
                android:background="@drawable/expand_close"
                />

    </RelativeLayout>
    <View
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_height="@dimen/dp_8"
            android:background="@color/teme_title_color"
            />
    <Button
            android:id="@+id/logout_rl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:text="退出当前账号"
            android:textColor="@color/black"
            android:textSize="@dimen/dp_18"
            android:background="@color/white"
            />

</LinearLayout>
