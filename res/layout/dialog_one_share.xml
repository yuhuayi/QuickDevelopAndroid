<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parents"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_transparent"
     >

    <LinearLayout
        android:id="@+id/ll_pop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_10"
            android:text="分享到"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_18" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <LinearLayout
                    android:id="@+id/short_message_ll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="@dimen/share_img_size"
                        android:layout_height="@dimen/share_img_size"
                        android:background="@drawable/icon_xiaoxi" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/dp_4"
                        android:text="信息"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/sp_10" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/weixin_friend_ll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="@dimen/share_img_size"
                        android:layout_height="@dimen/share_img_size"
                        android:background="@drawable/icon_weixin" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/dp_4"
                        android:text="微信好友"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/sp_10" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/circle_friend_ll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="@dimen/share_img_size"
                        android:layout_height="@dimen/share_img_size"
                        android:background="@drawable/icon_pengyouquan" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/dp_4"
                        android:text="朋友圈"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/sp_10" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/sina_ll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="@dimen/share_img_size"
                        android:layout_height="@dimen/share_img_size"
                        android:background="@drawable/icon_xinlang" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/dp_4"
                        android:text="新浪微博"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/sp_10" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/qq_ll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="@dimen/share_img_size"
                        android:layout_height="@dimen/share_img_size"
                        android:background="@drawable/icon_qq" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/dp_4"
                        android:text="QQ"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/sp_10" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/email_ll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="@dimen/share_img_size"
                        android:layout_height="@dimen/share_img_size"
                        android:background="@drawable/icon_youjian" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/sp_4"
                        android:text="邮件"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/sp_10" />
                </LinearLayout>
            </LinearLayout>
        </HorizontalScrollView>

        <View
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_4"
            android:id="@+id/add_black_and_report_black_view"
            android:background="@color/background_gray" />

        <LinearLayout
            android:id="@+id/add_black_and_report_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/add_black_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="@dimen/share_img_size"
                    android:layout_height="@dimen/share_img_size"
                    android:background="@drawable/icon_black_more" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dp_4"
                    android:text="黑名单"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/sp_10" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/report_ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="@dimen/share_img_size"
                    android:layout_height="@dimen/share_img_size"
                    android:background="@drawable/icon_report" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dp_4"
                    android:text="举报"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/sp_10" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_6"
            android:background="@color/background_gray" />

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="取消"
                android:textSize="@dimen/sp_20"
                android:textColor="@color/semi_transparent"
                android:gravity="center"
                android:paddingTop="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_10"
                />
    </LinearLayout>

</RelativeLayout>