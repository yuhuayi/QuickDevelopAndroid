<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/teme_title_color"
    android:orientation="vertical" >
    
	<RelativeLayout 
        android:layout_width="match_parent"
   		android:layout_height="wrap_content"
   		
        >
        <TextView 
             android:id="@+id/tv_report"
             android:layout_width="wrap_content"
   			 android:layout_height="wrap_content"
   			 android:text="实名认证"
   			 android:layout_centerInParent="true"
   			 android:layout_marginTop="@dimen/dp_14"
   			 android:textSize="@dimen/sp_18"
   			 android:textStyle="bold"
   			 android:textColor="@color/black"
            />
        
        <ImageView
                style="@style/title_left_bt_style"
                   android:id="@+id/title_back_img"/>
        
        <TextView 
            android:id="@+id/title_complete"
            android:layout_width="wrap_content"
   			android:layout_height="wrap_content"
   			android:text="完成"
   			android:textSize="@dimen/sp_16"
   			android:textColor="#0067ff"
   			android:layout_centerVertical="true"
   			android:layout_alignParentRight="true"
   			android:layout_marginRight="@dimen/dp_10"
            />
        
    </RelativeLayout>
    
	<TextView  
	    android:layout_width="wrap_content"
   		android:layout_height="wrap_content"
   		android:text="填写真实信息,获取认证特权"
   		android:textSize="@dimen/sp_18"
   		android:layout_marginLeft="@dimen/dp_14"
   		android:layout_marginTop="@dimen/dp_16"
   		
	    />
	<TextView 
	    android:layout_width="wrap_content"
   		android:layout_height="wrap_content"
   		android:layout_marginLeft="@dimen/dp_14"
   		android:layout_marginTop="@dimen/dp_16"
   		android:text="1此信息一旦提交不能修改"
   		android:textSize="@dimen/sp_16"
   		android:textColor="@color/gray"
	    />
	<TextView 
	    android:layout_width="wrap_content"
   		android:layout_height="wrap_content"
   		android:layout_marginLeft="@dimen/dp_14"
   		android:layout_marginRight="@dimen/dp_14"
   		android:layout_marginTop="@dimen/dp_10"
   		android:text="2请填写真实信息,我们仅作为审核使用,决不泄露!"
   		android:textSize="@dimen/sp_16"
   		android:textColor="@color/gray"
	    />
	<TextView 
	    android:layout_width="wrap_content"
   		android:layout_height="wrap_content"
   		android:layout_marginLeft="@dimen/dp_14"
   		android:layout_marginRight="@dimen/dp_14"
   		android:layout_marginTop="@dimen/dp_10"
   		android:text="3我们会在一个工作日内将审核结果以短信形式发送到您注册使用的电话号码,请留意查收!"
   		android:textSize="@dimen/sp_16"
   		android:textColor="@color/gray"
	    />
	<EditText android:layout_width="match_parent" android:layout_height="@dimen/input_item_height"
                      android:background="@color/white"
                      android:text=""
                      android:singleLine="true"
                      android:gravity="center_vertical"
                      android:textSize="@dimen/sp_16"
                      android:textColorHint="@color/half_gray"
                      android:textColor="@color/black"
                      android:hint="真实名字或常用艺名"
                      android:paddingLeft="@dimen/dp_18"
                      android:id="@+id/real_name_et"
                      android:layout_centerVertical="true"/>
	<TextView 
	        android:layout_width="wrap_content" 
	    	android:layout_height="wrap_content"
	    	android:text="请使用小伙伴们认识的名字，提交后不能更改。"
	    	android:layout_marginLeft="18dp"	
	    	android:textSize="@dimen/sp_14"    
	    	android:textColor="@color/gray"	
	    	android:layout_marginTop="@dimen/dp_2"
	    	android:paddingBottom="@dimen/dp_4"
	    />
	<EditText android:layout_width="match_parent" android:layout_height="@dimen/input_item_height"
                      android:background="@color/white"
                      android:text=""
                      android:singleLine="true"
                      android:gravity="center_vertical"
                      android:textSize="@dimen/sp_16"
                      android:textColorHint="@color/half_gray"
                      android:textColor="@color/black"
                      android:hint="身份证姓名"
                      android:id="@+id/id_card_name"
                      android:paddingLeft="@dimen/dp_18"
                      android:layout_marginTop="@dimen/dp_10"
                      android:layout_centerVertical="true"/>
	<RelativeLayout 
	     android:layout_width="match_parent"
   	     android:layout_height="wrap_content"
   	     android:background="@color/white"
	    >
	<View 
   	     android:layout_width="match_parent"
   	     android:layout_height="@dimen/dp_0_0_5"
   	     android:layout_marginLeft="@dimen/dp_18"
   	     android:background="@color/teme_title_color" />
	</RelativeLayout>
	<EditText android:layout_width="match_parent" android:layout_height="@dimen/input_item_height"
                      android:background="@color/white"
                      android:text=""
                      android:singleLine="true"
                      android:gravity="center_vertical"
                      android:textSize="@dimen/sp_16"
                      android:textColorHint="@color/half_gray"
                      android:textColor="@color/black"
                      android:hint="身份证号"
                      android:id="@+id/id_card_number"
                      android:paddingLeft="@dimen/dp_18"
                      android:layout_centerVertical="true"/>
</LinearLayout>
