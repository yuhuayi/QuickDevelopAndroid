<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="@dimen/dp_6"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_height="wrap_content">
    <RelativeLayout
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="wrap_content">
        <com.view.common.CircleImageView
                android:id="@+id/head_portrait_img"
                android:layout_width="@dimen/dp_28"
                android:layout_height="@dimen/dp_28"
                android:src="@drawable/head_portrait"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content" android:text="张大力"
                  android:textColor="@color/black" android:textSize="@dimen/sp_16"
                  android:layout_gravity="center_vertical" android:id="@+id/comment_name_tv"
                  android:layout_centerVertical="true" android:layout_toRightOf="@+id/head_portrait_img"
                  android:layout_marginLeft="@dimen/dp_8"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content" android:text="3小时前"
                  android:textColor="@color/black" android:textSize="@dimen/sp_16"
                  android:id="@+id/time_tv"
                  android:layout_gravity="center_vertical" android:layout_centerVertical="true"
                  android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <TextView android:layout_width="wrap_content"
              android:id="@+id/product_comment_tv"
              android:layout_height="wrap_content" android:text=""
              android:textColor="@color/semi_transparent" android:textSize="@dimen/sp_16"
              android:layout_gravity="center_vertical"
              android:paddingLeft="@dimen/dp_48"/>
</LinearLayout>