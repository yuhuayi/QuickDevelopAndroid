<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="@color/white"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:background="@color/teme_title_color"
            android:layout_height="@dimen/dp_48" android:id="@+id/relativeLayout">
        <ImageView
                android:padding="@dimen/dp_8"
                android:layout_width="wrap_content"
                  android:layout_centerVertical="true"
                  android:layout_height="wrap_content" 
                  android:src="@drawable/icon_add_attention"
                  android:id="@+id/title_discover_find_friends"
                   android:layout_alignParentLeft="true"/>
        <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_height="wrap_content" android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" android:id="@+id/linearLayout">
            <TextView android:layout_centerInParent="true"
                      android:layout_width="wrap_content"
                      android:textSize="@dimen/sp_18"
                      android:padding="@dimen/dp_12"
                      android:textStyle="bold"
                      android:textColor="@color/black"
                      android:layout_height="wrap_content" android:text="热门" android:id="@+id/title_discover_hot_tv"/>
            <TextView android:layout_centerInParent="true"
                      android:layout_width="wrap_content"
                      android:textSize="@dimen/sp_18"
                      android:padding="@dimen/dp_12"
                      android:textStyle="bold"
                      android:textColor="@color/gray"
                      android:layout_height="wrap_content" android:text="分类" android:id="@+id/title_discover_category_tv"/>
        </LinearLayout>
        <ImageView
                android:layout_width="wrap_content"
                android:padding="@dimen/dp_8"
                android:src="@drawable/icon_search2"
                android:layout_height="wrap_content" android:id="@+id/title_discover_search"
                android:layout_centerVertical="true" android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <android.support.v4.view.ViewPager
            android:id="@+id/main_discover_pager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relativeLayout"/>
</RelativeLayout>