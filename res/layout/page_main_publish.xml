<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:background="@color/black"
        android:layout_height="match_parent">
    <RelativeLayout
            android:id="@+id/title_rl"
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:background="@color/semi_transparent"
            android:layout_height="@dimen/dp_48">
        <Button
                android:id="@+id/button_cut"
                android:layout_width="wrap_content"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/white"
                android:background="@null"
                android:layout_height="wrap_content" android:text="摄像头切换" android:layout_centerVertical="true"
                android:layout_alignParentRight="true" android:layout_marginRight="16dp"/>
        <Button
                android:id="@+id/control_flash_bt"
                android:layout_width="wrap_content"
                android:textSize="@dimen/sp_14"
                android:textStyle="bold"
                android:background="@null"
                android:textColor="@color/white"
                android:layout_height="wrap_content" android:text="闪光灯-自动" android:layout_centerVertical="true"/>
    </RelativeLayout>
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_68"
            android:background="@color/semi_transparent"
            android:orientation="horizontal" android:layout_gravity="center_horizontal|bottom"
            android:id="@+id/relativeLayout"
            android:layout_above="@+id/cancle_button" android:layout_alignParentLeft="true">
        <Button
            	android:id="@+id/discover_video_bt"
                android:layout_width="wrap_content"
                android:textSize="@dimen/sp_14"
                android:textStyle="bold"
                android:background="@null"
                android:textColor="@color/white"
                android:layout_height="wrap_content" android:text="视频"
                android:layout_marginLeft="30dp" android:layout_alignBottom="@+id/button_capture"
                android:layout_alignParentLeft="true"/>
        <Button
                android:id="@+id/button_capture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/ic_bt_normal"/>

        <Button
                android:id="@+id/photo_selector_bt"
                android:layout_width="wrap_content"
                android:textSize="@dimen/sp_14"
                android:textStyle="bold"
                android:background="@null"
                android:textColor="@color/white"
                android:layout_height="wrap_content" android:text="相册导入"
                android:layout_marginRight="32dp" android:layout_alignBottom="@+id/button_capture"
                android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <Button
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:textSize="@dimen/sp_18"
            android:gravity="center"
            android:layout_marginTop="@dimen/dp_4"
            android:background="@color/semi_transparent"
            android:textColor="@color/white"
            android:layout_height="@dimen/dp_36" android:text="取消" android:id="@+id/cancle_button"/>

    <FrameLayout
        android:id="@+id/camera_preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true" >
    </FrameLayout>

</RelativeLayout>