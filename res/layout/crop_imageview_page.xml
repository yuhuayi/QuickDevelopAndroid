<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:orientation="vertical"
              android:layout_height="match_parent">
    <include layout="@layout/ga_title_layout"></include>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingTop="@dimen/dp_6"
            android:textColor="@color/color_saffron"
            android:paddingBottom="@dimen/dp_6"
            android:text="请拖动边角裁剪图片"
            android:textSize="@dimen/sp_16" />

    <com.edmodo.cropper.CropImageView
            xmlns:custom="http://schemas.android.com/apk/res-auto"
            android:id="@+id/CropImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            custom:imageResource="@drawable/ic_launcher"/>
    <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/dp_2"
            android:id="@+id/Button_rotate"
            android:layout_marginBottom="@dimen/dp_24"
            android:layout_height="wrap_content" android:layout_gravity="center_horizontal">
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/actionbar_btn_rotate"
                android:textColor="@color/white"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="旋转"
                android:paddingRight="@dimen/dp_8"
                android:gravity="center"
                android:textColor="@color/qblue"/>
    </LinearLayout>
</LinearLayout>