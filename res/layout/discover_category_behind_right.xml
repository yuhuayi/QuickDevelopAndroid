<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            style="@style/rightBehindMenuScroll">

    <LinearLayout style="@style/behindMenuScrollContent">
        <RelativeLayout
                android:layout_marginTop="@dimen/dp_38"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_12"
                android:layout_width="match_parent">
            <TextView
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/sp_24"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content" android:text="筛选" android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true" android:id="@+id/textView"/>
            <TextView
                	android:id="@+id/complete_bt"
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/sp_16"
                    android:paddingRight="@dimen/dp_24"
                    android:paddingLeft="@dimen/dp_24"
                    android:paddingTop="@dimen/dp_6"
                    android:paddingBottom="@dimen/dp_6"
                    android:textColor="@color/white"
                    android:background="@drawable/button_blue_shape"
                    android:layout_height="wrap_content" android:text="完成"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true" android:layout_marginRight="@dimen/dp_8"/>
        </RelativeLayout>
        <LinearLayout android:layout_width="match_parent"
                      android:orientation="vertical"
                      android:layout_marginTop="@dimen/dp_6"
                      android:layout_height="wrap_content">
            <View
                    android:layout_width="match_parent"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_height="@dimen/dp_0_0_5" android:background="#989898"/>
            <RelativeLayout
                	android:id="@+id/all_category_rl"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_12"
                    android:layout_width="match_parent">

                <TextView
                        android:id="@+id/search_filter_by_category_tv"
                        android:layout_width="wrap_content"
                        android:textSize="@dimen/sp_16"
                        android:textColor="@color/white"
                        android:layout_height="wrap_content" android:text="全部类型" android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"/>
                <ImageView
                        android:src="@drawable/expand_close"
                        android:layout_width="@dimen/dp_28"
                        android:layout_height="@dimen/dp_28"
                        android:layout_alignParentRight="true" android:layout_marginRight="@dimen/dp_12"/>
            </RelativeLayout>
            <View
                    android:layout_width="match_parent"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_height="@dimen/dp_0_0_5" android:background="#989898"/>
            <RelativeLayout
                	android:id="@+id/search_all_rl"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_12"
                    android:layout_width="match_parent">

                <TextView
                        android:id="@+id/search_filter_by_range_tv"
                        android:layout_width="wrap_content"
                        android:textSize="@dimen/sp_16"
                        android:textColor="@color/white"
                        android:layout_height="wrap_content" android:text="搜索全部" android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"/>
                <ImageView
                        android:src="@drawable/expand_close"
                        android:layout_width="@dimen/dp_28"
                        android:layout_height="@dimen/dp_28"
                        android:layout_alignParentRight="true" android:layout_marginRight="@dimen/dp_12"/>
            </RelativeLayout>
            <View   android:layout_marginLeft="@dimen/dp_12"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_0_0_5" android:background="#989898"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>