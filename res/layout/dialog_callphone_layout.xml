<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/background"
              android:orientation="vertical">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_marginBottom="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_12"
            android:orientation="vertical">

        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentTop="true" android:layout_centerHorizontal="true">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="呼叫两只老虎客服"
                    android:padding="@dimen/dp_4"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_20" android:id="@+id/textView" android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="工作时间9:00-21:00"
                    android:padding="@dimen/dp_6"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_18"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp_20"/>
        </RelativeLayout>

    </RelativeLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <View
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_0_5"
                android:background="@color/gray" android:id="@+id/view"
                android:layout_alignParentLeft="true"/>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:orientation="horizontal">
        <TextView
                android:id="@+id/dialog_cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/dp_12"
                android:text="取消"
                android:textColor="@color/gray_blue"
                android:textSize="@dimen/sp_20"/>

        <View
                android:layout_width="0.1dp"
                android:layout_height="match_parent"
                android:background="@color/gray"/>

        <TextView
                android:id="@+id/dialog_commit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/dp_12"
                android:text="呼叫"
                android:textColor="@color/gray_blue"
                android:textSize="@dimen/sp_20"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>