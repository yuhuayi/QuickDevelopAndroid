<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >   	
    <RelativeLayout
            android:id="@+id/title_rl"
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:background="@color/teme_title_color"
            android:layout_height="@dimen/dp_48">
        <ImageView
                style="@style/title_left_bt_style"
                   android:id="@+id/title_back_img"/>

        <TextView android:layout_centerInParent="true"
                  android:layout_width="wrap_content"
                  android:textSize="@dimen/sp_18"
                  android:textStyle="bold"
                  android:textColor="@color/black"
                  android:layout_height="wrap_content" android:text="修改密码" android:id="@+id/textView"/>
        
        <TextView 
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="完成"
            android:textColor="#0067ff"
            android:textSize="@dimen/sp_14"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/dp_6"
            android:id="@+id/title_right"
            />
    </RelativeLayout>

    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/ga_login_bg"
            android:orientation="vertical">

        <com.view.common.ClearEditText
                android:id="@+id/psd_1_et"
                android:layout_width="match_parent"
                android:gravity="left|center_vertical"
                android:hint="输入旧密码"
                android:inputType="textPassword"
                android:textColorHint="@color/gray"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@color/white"
                android:padding="@dimen/dp_12"
                android:layout_centerVertical="true" android:layout_toRightOf="@+id/sign_name"/>

        <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_marginLeft="@dimen/dp_6"
                android:background="@color/half_gray"/>

        <com.view.common.ClearEditText
                android:id="@+id/psd_2_et"
                android:layout_width="match_parent"
                android:inputType="textPassword"
                android:gravity="left|center_vertical"
                android:layout_height="wrap_content"
                android:hint="输入新密码"
                android:textColorHint="@color/gray"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="@dimen/dp_12"
                android:background="@color/white" android:layout_toRightOf="@+id/textView"/>

        <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/dp_6"
                android:background="@color/half_gray"/>
        <com.view.common.ClearEditText
                android:id="@+id/psd_3_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="left|center_vertical"
                android:layout_centerVertical="true"
                android:padding="@dimen/dp_12"
                android:inputType="textPassword"
                android:hint="确认密码"
                android:textColorHint="@color/gray"
                android:background="@color/white" android:layout_toRightOf="@+id/textView2"/>
        <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/half_gray"/>

    </LinearLayout>
</LinearLayout>
