<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical">

    <RelativeLayout
            android:layout_width="match_parent"
            android:background="@color/teme_title_color"
            android:layout_height="@dimen/dp_48">

        <ImageView
            android:id="@+id/title_back_img"
            style="@style/title_left_bt_style" />

        <TextView
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:textSize="@dimen/sp_18"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                android:text="个人资料"
                android:id="@+id/textView"/>

        <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0_5"
                android:background="@android:color/darker_gray"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"/>
        <TextView 
            android:id="@+id/complete_tv"
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content"
            android:text="完成"
            android:padding="@dimen/dp_6"
            android:textColor="#0067ff"
            android:textSize="@dimen/sp_16"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="@dimen/dp_8"
            />
    </RelativeLayout>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50">

        <TextView
                android:id="@+id/person_touxiang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_18"
                android:text="头像"
                android:textColor="@color/black"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_14"/>


        <ImageView
                android:id="@+id/haha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_14"
                android:background="@drawable/expand_close"/>

        <com.view.common.CircleImageView
                android:id="@+id/head_portrait_img"
                android:layout_width="@dimen/dp_48"
                android:layout_height="@dimen/dp_48"
                android:layout_toLeftOf="@id/haha"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/dp_4"
                android:src="@drawable/head_portrait"/>
        <View
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_0_0_5"
                android:layout_alignParentBottom="true"
                android:background="@color/background_gray"
                android:layout_marginLeft="@dimen/dp_10"
                android:id="@+id/view2"/>
    </RelativeLayout>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_18"
                android:text="名字"
                android:textColor="@color/black"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_14"
                android:id="@+id/textView4"/>

        <TextView 
            	android:id="@+id/name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_14"
                android:text=""
                android:background="@null"
                android:layout_centerVertical="true"
                android:textColor="@color/gray"
                android:layout_alignBottom="@+id/textView4"
                android:layout_alignRight="@+id/editText2"
                android:layout_marginRight="22dp"/>

        <View
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_0_0_5"
                android:layout_alignParentBottom="true"
                android:background="@color/background_gray"
                android:layout_marginLeft="@dimen/dp_10"
                android:id="@+id/editText2"/>
    </RelativeLayout>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_18"
                android:text="账号"
                android:textColor="@color/black"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_14"/>

        <TextView 
                android:id="@+id/zhanghao_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_14"
                android:text="  "
                android:background="@null"
                android:textColor="@color/gray"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_18"/>


        <View
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_4"
                android:layout_alignParentBottom="true"
                android:background="@color/background_gray"/>
    </RelativeLayout>

    <RelativeLayout
        	android:id="@+id/position_direction"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_18"
                android:text="感兴趣的"
                android:textColor="@color/black"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_14"/>

        <ImageView
                android:id="@+id/bb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_14"
                android:background="@drawable/expand_close"/>

        <TextView
                android:id="@+id/hangye_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_14"
                android:text=""
                android:textColor="@color/gray"
                android:layout_centerVertical="true"
                android:maxLength="10"
                android:layout_toLeftOf="@id/bb"/>


        <View
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_0_0_5"
                android:layout_alignParentBottom="true"
                android:background="@color/background_gray"
                android:layout_marginLeft="@dimen/dp_10"/>
    </RelativeLayout>

    <RelativeLayout
            android:id="@+id/work_now_rl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_18"
                android:text="现任职位"
                android:textColor="@color/black"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_14"/>

        <ImageView
                android:id="@+id/iv_back6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_14"
                android:background="@drawable/expand_close"/>

        <TextView
                android:id="@+id/work_now_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_14"
                android:text=""
                android:textColor="@color/gray"
                android:maxLength="10"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/iv_back6"/>

        <View
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_0_0_5"
                android:layout_alignParentBottom="true"
                android:background="@color/background_gray"
                android:layout_marginLeft="@dimen/dp_10"/>
    </RelativeLayout>

    <RelativeLayout
            android:id="@+id/skill_tab_rl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_18"
                android:text="技能标签"
                android:textColor="@color/black"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_14"/>

        <ImageView
                android:id="@+id/iv_back7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_14"
                android:background="@drawable/expand_close"/>

        <TextView
            	android:id="@+id/tag_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_14"
                android:text="  "
                android:textColor="@color/gray"
                android:layout_centerVertical="true"
                android:maxLength="10"
                android:layout_toLeftOf="@id/iv_back7"/>
    </RelativeLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/background_gray"></View>
</LinearLayout>
