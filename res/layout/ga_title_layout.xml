<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/ga_title_rl"
                android:layout_width="match_parent"
                android:background="@color/ga_title_color"
                android:layout_height="@dimen/dp_48">
    <LinearLayout android:id="@+id/title_left_ll" android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:focusable="true"
                  android:clickable="true"
                  android:layout_centerVertical="true"
                  android:layout_marginLeft="10dp" android:layout_alignParentLeft="true">
        <ImageView android:id="@+id/title_left_bt" android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:paddingLeft="@dimen/dp_12"
                   android:paddingTop="@dimen/dp_12"
                   android:paddingBottom="@dimen/dp_12"
                   android:paddingRight="@dimen/dp_36"
                   android:src="@drawable/back_icon"/>
        <TextView android:id="@+id/title_left_tv" android:layout_width="wrap_content"
                  android:layout_height="wrap_content" android:text="返回"
                  android:textSize="@dimen/sp_18"
                  android:visibility="gone"
                  android:textStyle="bold"
                  android:textColor="@color/white"
                  android:layout_marginLeft="8dp"/>
    </LinearLayout>
    <TextView android:id="@+id/title_center_tv" android:layout_centerInParent="true" android:layout_width="wrap_content"
              android:textSize="@dimen/sp_18"
              android:textStyle="bold"
              android:visibility="gone"
              android:textColor="@color/white"
              android:layout_height="wrap_content" android:text="标题"/>

    <TextView android:id="@+id/title_right_tv" android:layout_width="wrap_content"
              android:textSize="@dimen/sp_18"
              android:padding="@dimen/dp_4"
              android:textStyle="bold"
              android:layout_alignParentRight="true"
              android:layout_centerVertical="true"
              android:textColor="@color/white"
              android:layout_marginRight="8dp"
              android:layout_height="wrap_content" android:text="完成"/>
</RelativeLayout>