<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="@color/teme_title_color"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
            android:id="@+id/title_rl"
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:background="@color/teme_title_color"
            android:layout_height="@dimen/dp_48">
        <ImageView  style="@style/title_left_bt_style"
                   android:id="@+id/title_back_img"/>
        <TextView android:layout_centerInParent="true"
                  android:layout_width="wrap_content"
                  android:textSize="@dimen/sp_18"
                  android:textStyle="bold"
                  android:textColor="@color/black"
                  android:layout_height="wrap_content" android:text="注册" android:id="@+id/center_title_tv"/>

    </RelativeLayout>
    <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent"
                    android:background="@color/teme_title_color"
                    android:orientation="vertical" android:id="@+id/linearLayout" android:layout_below="@+id/title_rl"
                    android:layout_alignParentLeft="true">

        <RelativeLayout android:layout_width="match_parent" android:layout_height="@dimen/input_item_height"
                                         android:background="@color/white"
                                         android:layout_marginTop="@dimen/dp_1"
                                         android:id="@+id/relativeLayout">
        <EditText android:layout_width="match_parent" android:layout_height="@dimen/input_item_height"
                  android:background="@null"
                  android:text=""
                  android:singleLine="true"
                  android:gravity="center_vertical"
                  android:textSize="@dimen/sp_16"
                  android:textColorHint="@color/half_gray"
                  android:textColor="@color/black"
                  android:hint="请输入手机号码"
                  android:id="@+id/login_mobile_et"
                  android:padding="@dimen/dp_2"
                  android:layout_marginLeft="17dp"
                  android:layout_centerVertical="true"/>
    </RelativeLayout>
        <Button android:layout_width="match_parent" android:layout_height="wrap_content"
                android:paddingTop="@dimen/dp_12" android:paddingBottom="@dimen/dp_12"
                android:background="@drawable/button_blue_shape"
                android:text="下一步"
                android:layout_marginRight="@dimen/dp_18"
                android:layout_marginLeft="@dimen/dp_18"
                android:gravity="center"
                android:layout_marginTop="@dimen/dp_32"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_18"
                android:id="@+id/register_next_bt"
                android:layout_below="@+id/relativeLayout" android:layout_centerHorizontal="true"/>
    </RelativeLayout>
</RelativeLayout>