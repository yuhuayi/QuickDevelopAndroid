<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

        <ImageView
                android:id="@+id/title_back_img"
                style="@style/title_left_bt_style"/>

        <ImageView
                android:id="@+id/share_sdk_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_18"
                android:src="@drawable/icon_myself_personspace_more"/>
    </RelativeLayout>

    <com.view.common.VScrollView
            android:id="@+id/sub_person_space_sc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="vertical">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <com.view.common.CircleImageView
                        android:id="@+id/user_head_portrait_img"
                        android:layout_width="@dimen/dp_68"
                        android:layout_height="@dimen/dp_68"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/dp_18"
                        android:background="@drawable/ic_launcher"/>					            
                <RelativeLayout
                        android:id="@+id/name_rl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/dp_12"
                        android:visibility="visible">

                    <TextView
                            android:id="@+id/tv_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="李胜科"
                            android:layout_centerHorizontal="true"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp_28"/>
					<TextView
                        android:id="@+id/position_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_below="@id/tv_name"
                        android:text="正帮设计总监"
                        android:textColor="@color/gray"
                        android:layout_centerHorizontal="true"
                        android:textSize="@dimen/sp_18"
                        android:visibility="visible"/>
                    <ImageView
                            android:layout_width="@dimen/dp_34"
                            android:layout_height="@dimen/dp_34"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/dp_5"
                            android:layout_toRightOf="@id/tv_name"
                            android:visibility="gone"
                            android:src="@drawable/icon_discover_renzheng"/>
                </RelativeLayout>

                

                <TextView
                    	android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="@dimen/dp_32"
                        android:layout_marginTop="@dimen/dp_10"
                        android:text="130****8888"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_18"/>
            </LinearLayout>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0_5"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_marginRight="@dimen/dp_12"
                    android:layout_marginTop="@dimen/dp_12"
                    android:background="@android:color/darker_gray"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/dp_12"
                    android:weightSum="4">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="关注:"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/sp_16"/>

                    <TextView
                        	android:id="@+id/guanzhu_sum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" 358"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/sp_16"/>
                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="粉丝:"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/sp_16"/>

                    <TextView
                        	android:id="@+id/fensi_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="127"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/sp_16"/>
                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                    <TextView
                            android:id="@+id/person_beizan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="被赞: "
                            android:textColor="@color/gray"
                            android:textSize="@dimen/sp_16"/>

                    <TextView
                        	android:id="@+id/beizan_sum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4963 "
                            android:textColor="@color/gray"
                            android:textSize="@dimen/sp_16"/>
                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                    <TextView
                            android:id="@+id/person_zhuanqu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_14"
                            android:text="专区"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/sp_16"/>

                    <ImageView
                            android:layout_width="@dimen/dp_18"
                            android:layout_height="@dimen/dp_18"
                            android:layout_marginLeft="@dimen/dp_2"
                            android:src="@drawable/icon_myself_zhuanqu"/>
                </LinearLayout>
            </LinearLayout>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0_5"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_marginRight="@dimen/dp_12"
                    android:background="@android:color/darker_gray"/>

            <RelativeLayout
                    android:id="@+id/edit_user_info_rl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/dp_12"
                    android:paddingTop="@dimen/dp_12">

                <Button
                        android:id="@+id/bt_edit_ziliao"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="@color/background_gray"
                        android:drawableLeft="@drawable/bt_edit_ziliao_icon"
                        android:paddingBottom="@dimen/dp_8"
                        android:paddingLeft="@dimen/dp_32"
                        android:paddingRight="@dimen/dp_32"
                        android:paddingTop="@dimen/dp_8"
                        android:text="编辑资料"
                        android:textSize="@dimen/sp_18"/>
            </RelativeLayout>

            <LinearLayout
                    android:id="@+id/person_sendMsg_addAttention_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/dp_6"
                    android:paddingTop="@dimen/dp_6"
                    android:visibility="gone"
                    android:weightSum="2">

                <Button
                        android:id="@+id/private_msg_bt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dp_6"
                        android:layout_weight="1"
                        android:background="@drawable/button_blue_shape"
                        android:drawableLeft="@drawable/private_msg_bt_icon"
                        android:paddingBottom="@dimen/dp_8"
                        android:paddingLeft="@dimen/dp_44"
                        android:paddingRight="@dimen/dp_44"
                        android:paddingTop="@dimen/dp_8"
                        android:text="私信"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_18"/>

                <Button
                        android:id="@+id/add_attention_bt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dp_6"
                        android:layout_weight="1"
                        android:background="@drawable/button_blue_shape"
                        android:drawableLeft="@drawable/add_attention_bt_icon"
                        android:paddingBottom="@dimen/dp_8"
                        android:paddingLeft="@dimen/dp_44"
                        android:paddingRight="@dimen/dp_44"
                        android:paddingTop="@dimen/dp_8"
                        android:text="加关注"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_18"/>
                
                <Button
                        android:id="@+id/aleady_attention_bt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dp_6"
                        android:layout_weight="1"
                        android:background="@drawable/button_gray_shape"
                        android:drawableLeft="@drawable/aleady_attention"
                        android:paddingBottom="@dimen/dp_8"
                        android:paddingLeft="@dimen/dp_44"
                        android:paddingRight="@dimen/dp_44"
                        android:paddingTop="@dimen/dp_8"
                        android:text="已关注"
                        android:textColor="@color/black"
                        android:visibility="gone"
                        android:textSize="@dimen/sp_18"/>
            </LinearLayout>

            <com.view.common.FlowLayout
                    android:id="@+id/user_label_fl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/background_gray"
                    android:paddingBottom="@dimen/dp_6"
                    android:visibility="visible">
            </com.view.common.FlowLayout>

            <LinearLayout
                    android:id="@+id/edit_user_label_hint_ll"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_108"
                    android:background="@color/teme_title_color"
                    android:gravity="center"
                    android:orientation="vertical">

                <TextView
                        android:id="@+id/edit_user_label_hint_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="编辑资料 \n 填写技能标签"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/sp_18"/>
            </LinearLayout>

            <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical">

                <RelativeLayout
                        android:id="@+id/partner_rl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dp_4"
                        android:background="@color/white"
                        android:padding="@dimen/dp_6">

                    <TextView
                            android:id="@+id/partner_count_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center_vertical"
                            android:text="合作过的"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp_16"/>

                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/expand_close"/>
                </RelativeLayout>

                <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_0_5"
                        android:layout_gravity="center_vertical"
                        android:background="@color/half_gray"/>

                <com.view.common.LinearLayoutForListView
                        android:id="@+id/partner_container_ll"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="horizontal"
                        android:visibility="visible">
                </com.view.common.LinearLayoutForListView>
            </LinearLayout>

            <RelativeLayout
                    android:id="@+id/partner_hint_ll"
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_118"
                    android:layout_marginBottom="@dimen/dp_36">

                <TextView
                        android:id="@+id/partner_hint_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:text="抱歉,您还没有合作记录"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/sp_18"/>
            </RelativeLayout>
            <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_4"
                    android:layout_alignParentBottom="true"
                    android:background="@color/teme_title_color"/>
            <LinearLayout
                    android:layout_marginTop="@dimen/dp_6"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_44"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginRight="@dimen/dp_16"
                    android:background="@drawable/button_24_toggle_shape"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="2">

                <TextView
                        android:id="@+id/product_switch_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/dp_2"
                        android:layout_weight="1"
                        android:background="@drawable/button_24_white_shape"
                        android:gravity="center"
                        android:text="作品"
                        android:textColor="@color/color_teme_toggle_bg"
                        android:textSize="@dimen/sp_18"/>

                <TextView
                        android:id="@+id/discover_switch_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/dp_2"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="发现"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_18"/>
            </LinearLayout>

            <TextView
                    android:id="@+id/sub_person_space_hint_tv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingBottom="@dimen/dp_118"
                    android:paddingTop="@dimen/dp_50"
                    android:text="您还没有认领作品"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/sp_18"/>

            <com.view.common.LinearLayoutForListView
                    android:id="@+id/sub_person_space_ll"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:visibility="gone"/>
        </LinearLayout>
    </com.view.common.VScrollView>

</LinearLayout>